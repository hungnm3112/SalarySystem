<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@android:dimen/app_icon_size"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        fresco:placeholderImage="@drawable/xuan"
        fresco:roundedCornerRadius="15dp"
        fresco:roundBottomStart="false"
        fresco:roundBottomEnd="false"
        fresco:roundWithOverlayColor="@color/blue"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="@color/red"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        fresco:placeholderImage="@drawable/thuy" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        fresco:placeholderImage="@drawable/hoa" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        fresco:placeholderImage="@drawable/van" />
</LinearLayout>